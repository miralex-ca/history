<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:id="@+id/status_wrap"

    android:visibility="gone"

    android:layout_marginTop="9dp"
    >


    <RelativeLayout
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:alpha=".7"

            style="@style/cat_item_status"
            android:text="Статус: не пройдено"

            android:id="@+id/statusUnknown"
            android:textColor="?attr/colorUnknown"
            android:background="@drawable/text_round_gray_bg"

            />

        <TextView

            style="@style/cat_item_status"
            android:text="Статус: пройдено"

            android:id="@+id/statusKnown"
            android:textColor="?attr/colorKnown"
            android:background="@drawable/text_round_blue_bg"

            />

        <TextView
            style="@style/cat_item_status"
            android:text="Статус: изучено"

            android:id="@+id/statusStudied"
            android:textColor="?attr/colorStudied"
            android:background="@drawable/text_round_green_bg"
            />

    </RelativeLayout>

    <TextView

        android:visibility="gone"
        style="@style/cat_item_status"
        android:text="Ошибки: 0"

        android:ellipsize="middle"
        android:singleLine="true"

        android:id="@+id/errorsCount"
        android:textColor="?attr/colorErrors"
        android:background="@drawable/text_round_red_bg"

        />


</LinearLayout>