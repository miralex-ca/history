<?xml version="1.0" encoding="utf-8"?>



<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:fillViewport="true"
    android:gravity="center_horizontal"
    >



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:gravity="top"

    android:padding="20dp"

    >


    <TextView

        android:textSize="14sp"
        android:text="Общий результат складывается из следующих составляющих:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout

        android:paddingTop="12dp"
        android:layout_marginLeft="5dp"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/resultInfoTestTxt"
                style="@style/ResultInfoText"
                android:text="Тест"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/resultInfoKnownTxt"
                style="@style/ResultInfoText"
                android:text="Пройдено"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/resultInfoStudiedTxt"
                style="@style/ResultInfoText"
                android:text="Изучено"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/resultInfoTest"
                style="@style/ResultInfoText.Right"
                android:text="100%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/resultInfoKnown"
                style="@style/ResultInfoText.Right"
                android:text="100%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/resultInfoStudied"
                style="@style/ResultInfoText.Right"
                android:text="100%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>


    <TextView

        android:text="Итого: 100%"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:textStyle="bold"

        android:id="@+id/resultSection"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>

</android.support.v4.widget.NestedScrollView>
