<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto" >


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/card_margin_default"
            app:cardBackgroundColor="?attr/colorDialogBg"
            style="@style/MenuDialog"
            app:cardCornerRadius="12dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                >

                <LinearLayout
                    android:id="@+id/navItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    style="@style/NavDialogItem"
                    >

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/nav_icon_dialog_size"
                        android:layout_height="@dimen/nav_icon_dialog_size"
                        app:srcCompat="@drawable/ic_nav_settings_dialog"
                        />

                    <TextView

                        android:layout_gravity="center_vertical"
                        android:textSize="21sp"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_settings_txt"
                        />

                </LinearLayout>


                <View
                    android:background="#48969696"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/navItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    style="@style/NavDialogItem"
                    >

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/nav_icon_dialog_size"
                        android:layout_height="@dimen/nav_icon_dialog_size"
                        app:srcCompat="@drawable/ic_nav_info_dialog"
                        />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="21sp"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_info_txt"
                        />

                </LinearLayout>


                <View
                    android:background="#48969696"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/navItem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    style="@style/NavDialogItem"

                    >

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/nav_icon_dialog_size"
                        android:layout_height="@dimen/nav_icon_dialog_size"
                        app:srcCompat="@drawable/ic_nav_send_dialog"
                        />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_contact_txt"
                        />




                </LinearLayout>




            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</RelativeLayout>