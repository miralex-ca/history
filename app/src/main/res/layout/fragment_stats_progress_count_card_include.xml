<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_height="match_parent"
        app:contentPadding="0dp"
        android:layout_gravity="center_horizontal"

        android:layout_width="match_parent"
        style="@style/CardViewStyle.Widget"

        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?attr/CardViewBorder"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingLeft="@dimen/card_stats_side"
            android:paddingRight="@dimen/card_stats_side"

            android:paddingBottom="18dp"
            android:paddingTop="24dp"

            android:minHeight="180dp"

            >

            <TextView
                android:textColor="?attr/colorSecondaryText"
                android:layout_marginBottom="3dp"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light"
                android:text="Изучено записей"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/stats_studied_count"
                android:layout_marginLeft="4dp"
                android:textSize="21sp"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="16dp"
                android:maxLines="1"
                android:layout_marginBottom="3dp"
                android:textColor="?attr/colorSecondaryText"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light"
                android:text="Пройдено записей"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/stats_known_count"
                android:textSize="21sp"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>