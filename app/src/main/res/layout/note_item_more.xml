<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cat_item_wrap"
    android:focusable="true"
    android:clickable="true"
    android:gravity="center_horizontal"
    >


    <RelativeLayout
        android:id="@+id/openMoreWrap"

        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:cardElevation="2dp"
            android:layout_gravity="bottom|center"
            app:contentPadding="0dp"
            app:cardCornerRadius="18dp"

            style="@style/CardViewStyle.Widget"

            >

            <RelativeLayout

                android:onClick="openCompleteList"

                android:id="@+id/openMore"
                android:focusable="true"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"

                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView

                    android:layout_centerVertical="true"
                    android:id="@+id/openMoreTxt"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Открыть больше"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>




            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            app:contentPadding="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            style="@style/CardViewStyle.Widget"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?attr/CardViewBorder"
                />

            <RelativeLayout

                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/withPicWrap"
                        android:layout_marginRight="80dp"
                        android:minHeight="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:id="@+id/noteTitle"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="sans-serif-light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:layout_marginTop="4dp"
                            android:id="@+id/noteContent"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_marginLeft="6dp"
                        android:visibility="visible"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        >

                        <ImageView
                            android:id="@+id/noteIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>


                </RelativeLayout>



            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>




</RelativeLayout>