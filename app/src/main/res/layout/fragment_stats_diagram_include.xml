<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/progressBox"
    >

    <ProgressBar
        style="?android:progressBarStyleHorizontal"

        android:progressDrawable="@drawable/circle_progress_gray"

        android:layout_centerInParent="true"
        android:progress="100"
        android:layout_width="@dimen/stats_diagram_ext_size"
        android:layout_height="@dimen/stats_diagram_ext_size" />

    <ProgressBar
        android:id="@+id/knownProgress"
        style="?android:progressBarStyleHorizontal"
        android:rotation="270"

        android:progressDrawable="@drawable/circle_progress"

        android:layout_centerInParent="true"

        android:progress="40"

        android:layout_width="@dimen/stats_diagram_ext_size"
        android:layout_height="@dimen/stats_diagram_ext_size" />

    <ProgressBar

        style="?android:progressBarStyleHorizontal"

        android:progressDrawable="@drawable/circle_progress_green"

        android:layout_centerInParent="true"

        android:progress="100"

        android:alpha=".1"

        android:layout_width="@dimen/stats_diagram_int_size"
        android:layout_height="@dimen/stats_diagram_int_size" />

    <ProgressBar

        android:id="@+id/studiedProgress"
        style="?android:progressBarStyleHorizontal"
        android:rotation="270"

        android:progressDrawable="@drawable/circle_progress_green"

        android:layout_centerInParent="true"

        android:progress="40"

        android:layout_width="@dimen/stats_diagram_int_size"
        android:layout_height="@dimen/stats_diagram_int_size" />


</RelativeLayout>