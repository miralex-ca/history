<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">



    <LinearLayout
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="220dp"

            android:layout_gravity="center_horizontal"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="14dp"



            app:cardElevation="8dp"
            app:cardBackgroundColor="?attr/colorDialogBg"

            app:cardCornerRadius="2dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                >


                <LinearLayout
                    android:padding="16dp"
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"

                    >

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_action_edit"
                        />

                    <TextView

                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/popup_menu_edit"
                        />

                </LinearLayout>



                <LinearLayout
                    android:padding="16dp"
                    android:id="@+id/archive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"

                    >

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_action_unarchive"
                        />

                    <TextView

                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/popup_menu_unarchive"
                        />

                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:background="#48969696"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:visibility="gone"
                    android:padding="16dp"
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"

                    >

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_edit_delete"
                        />

                    <TextView

                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:paddingLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/popup_menu_delete"
                        />

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>








</LinearLayout>