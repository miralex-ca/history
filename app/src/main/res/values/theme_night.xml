        <item name="colorDrawerItemBg">@color/colorDrawerMenuBg_night</item>
        <item name="colorMultipaneMenuBg">@color/colorDrawerMenuBg_night</item>


        <item name="cardMargin">@dimen/card_margin_default</item>
        <item name="colorExBottomDivider">@color/colorExBottomDivider</item>

        <item name="deviderStyle">@style/deviderStyle_night</item>

        <item name="PopupOverlayTheme">@style/PopupOverlayTheme_night</item>

    </style>


    <style name="PopupOverlayTheme_night" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/colorMenu_night</item>
    </style>


    <style name="deviderStyle_night">
        <item name="android:visibility">gone</item>
    </style>



    <style name="NightTheme.UserDialog" parent="DarkTheme.UserDialog">

    </style>






