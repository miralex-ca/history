        <activity
            android:name=".CardsActivity"
            android:screenOrientation="behind"
            android:label="@string/title_activity_cards"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ExerciseActivity"
            android:screenOrientation="behind"
            android:label="@string/title_activity_exericse"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UserListActivity"
            android:screenOrientation="behind"
            android:label="@string/title_activity_user_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SectionStatsActivity"
            android:screenOrientation="behind"
            android:label="@string/title_activity_cat_stats"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SectionStatsListActivity"
            android:screenOrientation="behind"
            android:label="@string/title_activity_cat_data_stats"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CustomDataListActivity"
            android:screenOrientation="behind"
