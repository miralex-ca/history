        <activity
            android:name=".ReferenceActivity"
            android:screenOrientation="behind"
            android:label="@string/title_activity_reference"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".GetPremium"
            android:screenOrientation="behind"
            android:label="@string/title_activity_get_premium"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SectionActivity"
            android:screenOrientation="behind"
            android:label="@string/title_activity_section"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SubSectionActivity"
            android:screenOrientation="behind"
            android:label="@string/title_activity_sub_section"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SectionListActivity"
            android:screenOrientation="behind"
            android:label="@string/title_activity_section_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SectionTestActivity"
            android:screenOrientation="behind"
            android:label="@string/title_activity_section_test"
            android:theme="@style/AppTheme" />
